{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MA3 Cue Display",
  "version": "1.0.0",
  "identifier": "com.gma3cuedisplay.display",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "MA3 Cue Display",
        "label": "launcher",
        "width": 400,
        "height": 450,
        "resizable": false,
        "maximizable": false,
        "center": true,
        "visible": true,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "public.app-category.productivity",
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
